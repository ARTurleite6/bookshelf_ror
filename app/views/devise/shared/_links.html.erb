<%- if controller_name != 'sessions' %>
  <span>Already have an account? Log in</span>
  <%= link_to "here", new_session_path(resource_name), class: 'text-blue-500 hover:underline' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span>No account yet? Sign up</span>
  <%= link_to 'here', new_registration_path(resource_name), class: 'text-blue-500 hover:underline' %> <br />
<% end %>

