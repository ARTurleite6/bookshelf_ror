<div class="grid grid-cols-4 gap-10">
  <table class="col-span-3">
    <tbody>
      <% @books.each do |book| %>
        <tr class="<%= cycle('bg-violet-50', 'bg-white') %> shadow">
          <td class="px-2 py-3">
            <%= image_tag(book.cover_url, class: 'w-40') %>
          </td>
          <td>
            <h1 class="text-xl font-bold mb-3 hover:cursor-pointer hover:underline"><%= book.title %></h1>
            <p class="max-w-xl"><%= truncate(book.description, length: 200) %></p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>