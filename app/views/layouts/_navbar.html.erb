<% if user_signed_in? %>
  <div class="flex justify-between px-7 py-5">
    <%= link_to root_path do %>
      <h1 class="font-bold">Bookshelf</h1>
    <% end %>
    <div class="flex gap-6 px-5 items-center">
      <%= image_tag('bookmark-regular.svg', class: 'w-4') %>
      <div class="flex gap-2">
        <%= image_tag('user-regular.svg', class: 'w-4') %>
        <%= current_user.first_name %>
      </div>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= image_tag('logout.svg', class: 'w-4') %>
      <% end %>
    </div>
  </div>
<% end %>